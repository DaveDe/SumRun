<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="60dp"

        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/level"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/displayMode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/timeLabel"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:paddingTop="15dp"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/totalScore"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timeLabel"
        android:paddingTop="50dp"
        android:textColor="#ffffff"
        android:textSize="25sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/currentScore"

        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/score_padding"
        android:textColor="#ffffff"
        android:textSize="30sp"/>

    <GridLayout

        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:rowCount="3"
        android:columnCount="3"
        android:paddingLeft="@dimen/grid_padding_left"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/grid_padding_top">
        <!-- dp: 240x-->
        <TextView android:id="@+id/tv1" android:text="1" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv2" android:text="2" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv3" android:text="3" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv4" android:text="4" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv5" android:text="5" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv6" android:text="6" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv7" android:text="7" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv8" android:text="8" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
        <TextView android:id="@+id/tv9" android:text="9" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size_3" android:layout_height="@dimen/box_size_3" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/goal"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/goal_padding"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/help"
        android:layout_alignRight="@+id/level"
        android:layout_alignEnd="@+id/level"
        android:paddingBottom="15dp"
        android:paddingRight="30dp"

        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"/>

</RelativeLayout>