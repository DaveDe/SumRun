    <TextView android:id="@+id/tv7" android:text="7" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv8" android:text="8" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv9" android:text="9" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv10" android:text="10" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv11" android:text="11" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv12" android:text="12" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv13" android:text="13" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv14" android:text="14" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv15" android:text="15" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv16" android:text="16" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv17" android:text="17" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv18" android:text="18" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv19" android:text="19" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv20" android:text="20" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv21" android:text="21" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv22" android:text="22" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv23" android:text="23" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv24" android:text="24" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>
    <TextView android:id="@+id/tv25" android:text="25" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="@dimen/box_size" android:layout_height="@dimen/box_size" android:gravity="center" android:textColor="#ffffff" android:textSize="30sp"/>

</GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Goal"
        android:id="@+id/goal"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/goal_padding"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menu_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/help"
        android:layout_alignRight="@+id/level"
        android:layout_alignEnd="@+id/level" />

</RelativeLayout>