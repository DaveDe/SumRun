<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main Menu"
        android:fontFamily="sans-serif-thin"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:id="@+id/main_menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/title_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Theme: "
        android:id="@+id/theme_label"
        android:textColor="@color/white"
        android:layout_below="@+id/main_menu"
        android:paddingLeft="@dimen/menu_padding_left"
        android:paddingTop="@dimen/menu_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mode: "
        android:id="@+id/mode_label"
        android:textColor="@color/white"
        android:layout_below="@+id/theme_label"
        android:paddingLeft="@dimen/menu_padding_left"
        android:paddingTop="@dimen/menu_padding"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theme_button"
        android:layout_below="@+id/main_menu"
        android:layout_toRightOf="@+id/theme_label"
        android:layout_toEndOf="@+id/theme_label"
        android:paddingTop="@dimen/menu_padding"

        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode_button"
        android:layout_below="@+id/theme_button"
        android:layout_toRightOf="@+id/mode_label"
        android:layout_toEndOf="@+id/mode_label"
        android:paddingTop="@dimen/menu_padding"

        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/high_scores"
        android:layout_above="@+id/help"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/menu_padding"

        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/help"
        android:layout_above="@+id/done"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/menu_padding"

        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"/>


    <Button
        android:id="@+id/done"
        android:text="Done"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/menu_padding"

        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:background="@drawable/button_enabled"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mute"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>